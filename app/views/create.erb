<div class="container">
  <h2>Create a post</h2>
  <form action="/create" method="post">
    <input type="text" name="post[email]" placeholder="Email">
    <input type="text" name="post[title]" placeholder="Title">
    <input type="text" name="post[description]" placeholder="Description">
    <input type="text" name="post[price]" placeholder="Price">
    <input type="text" name="post[category]" placeholder="Category">
    <input type="submit" value="Submit">
  </form>
</div>

